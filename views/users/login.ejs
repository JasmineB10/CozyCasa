<% layout("/layouts/boilerplate")%>
<h1 class="col-6 offset-3">Login to your Account</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter Username" id="username" class="form-control" required>
               </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Enter Password" id="password" class="form-control" required>
              </div>
              <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>